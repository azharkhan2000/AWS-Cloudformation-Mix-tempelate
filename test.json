{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This is my VPC",
  
    "Parameters" : {
        "VPCName" : {
            "Type" : "String",
            "Default" : "SafePay-VPC",
            "Description" : "Write your VPC name"
        },
        "IGW" : {
            "Type" : "String",
            "Default" : "Safepay-IGW",
            "Description" : "Write your Intermet Gateway name"
        },
        "PublicRoutetableName" : {
            "Type" : "String",
            "Default" : "PublicRoutetableName",
            "Description" : "Write your Routetable name"
        },
        "PrivateRoutetableName" : {
            "Type" : "String",
            "Default" : "PrivateRoutetableName",
            "Description" : "Write your Routetable name"
        },
        "PublicNACL": {
              "Description": "Public Network ACL Id",
              "Type": "String"
            },
        "PrivateNACL": {
              "Description": "Private Network ACL Id",
              "Type": "String"
            },
        "OWNIP": {
                  "Description": "Update this with your own office/home public ip address",
                  "Type": "String"
                }
    },

    "Resources" : {
        "safePayvpc" : {
            "Type" : "AWS::EC2::VPC",
            "Properties" : {
                "CidrBlock" : "192.168.0.0/16",
                "EnableDnsHostnames" : true,
                "EnableDnsSupport" : true,
                "InstanceTenancy" : "default",
                "Tags" : [ 
                    {
                        "Key" : "Name",
                        "Value" : {"Ref" : "VPCName"}
                    } 
                ]
            }
        },
        "Safepayigw" : {
            "Type" : "AWS::EC2::InternetGateway",
            "Properties" : {
                "Tags" : [ 
                    {
                        "Key" : "Name",
                        "Value" : {"Ref" : "IGW"}
                    } 
                ]
            }
        },
        "vpcgatewayattachment" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
                "InternetGatewayId" : {"Ref":"Safepayigw"},
                "VpcId" : {"Ref":"safePayvpc"}
            }
        },
        "rtpublic": {
            "Type" : "AWS::EC2::RouteTable",
            "Properties" : {
                "Tags" : [ 
                    {
                        "Key" : "Name",
                        "Value" : {"Ref" : "PublicRoutetableName"}
                    } 
                ],
                "VpcId" : {"Ref":"safePayvpc"}
                }
        },
        "rtprivate": {
            "Type" : "AWS::EC2::RouteTable",
            "Properties" : {
                "Tags" : [ 
                    {
                        "Key" : "Name",
                        "Value" : {"Ref" : "PrivateRoutetableName"}
                    } 
                ],
                "VpcId" : {"Ref":"safePayvpc"}
                }
        },
        "publicsubnet1" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "CidrBlock" : "192.168.0.0/24",
                "Tags" : [ 
                    {
                        "Key" : "Name",
                        "Value" : "publicsubnet1"
                    } 
                ],
                "VpcId" : {"Ref":"safePayvpc"},
                "AvailabilityZone" : "us-east-1a"
            }
        },
        "publicsubnet2" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "CidrBlock" : "192.168.1.0/24",
                "Tags" : [ 
                    {
                        "Key" : "Name",
                        "Value" : "publicsubnet2"
                    } 
                ],
                "VpcId" : {"Ref":"safePayvpc"},
                "AvailabilityZone" : "us-east-1b"
            }
        },
        "privatesubnet1" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "CidrBlock" : "192.168.2.0/24",
                "Tags" : [ 
                    {
                        "Key" : "Name",
                        "Value" : "privatesubnet1"
                    } 
                ],
                "VpcId" : {"Ref":"safePayvpc"},
                "AvailabilityZone" : "us-east-1a"
            }
        },
        "privatesubnet2" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "CidrBlock" : "192.168.3.0/24",
                "Tags" : [ 
                    {
                        "Key" : "Name",
                        "Value" : "privatesubnet2"
                    } 
                ],
                "VpcId" : {"Ref":"safePayvpc"},
                "AvailabilityZone" : "us-east-1b"
            }
        },
        
        "rtassociationpublicsubnet1" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "RouteTableId" : {"Ref": "rtpublic"},
                "SubnetId" : {"Ref": "publicsubnet1"}
              }
        },

        "rtassociationpublicsubnet2" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "RouteTableId" : {"Ref": "rtpublic"},
                "SubnetId" : {"Ref": "publicsubnet2"}
              }
        },

        "rtassociationprivatesubnet1" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "RouteTableId" : {"Ref": "rtprivate"},
                "SubnetId" : {"Ref": "privatesubnet1"}
              }
        },

        "rtassociationprivatesubnet2" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "RouteTableId" : {"Ref": "rtprivate"},
                "SubnetId" : {"Ref": "privatesubnet2"}
              }
        },
        
        "vpcroute": {
            "Type" : "AWS::EC2::Route",
            "Properties" : {
                "DestinationCidrBlock" : "0.0.0.0/0",
                "GatewayId" : {"Ref" : "Safepayigw"},
                "RouteTableId" : {"Ref" :"rtpublic"}
            }
        },
        
        "NAT" : {
            "Type" : "AWS::EC2::NatGateway",
            "Properties" : {
               "AllocationId" : { "Fn::GetAtt" : ["EIP", "AllocationId"]},
               "SubnetId" : { "Ref" : "publicsubnet1"},
               "Tags" : [ {"Key" : "Name", "Value" : "NAT" } ]
              }
         },
         "EIP" : {
            "DependsOn" : "vpcgatewayattachment",
            "Type" : "AWS::EC2::EIP",
            "Properties" : {
               "Domain" : "vpc"
            }
         },
         "Route" : {
            "Type" : "AWS::EC2::Route",
            "Properties" : {
               "RouteTableId" : { "Ref" : "rtprivate" },
               "DestinationCidrBlock" : "0.0.0.0/0",
               "NatGatewayId" : { "Ref" : "NAT" }
            }
         },

        "InboundSSHNACL": {
              "Type": "AWS::EC2::NetworkAclEntry",
              "Properties": {
                "NetworkAclId": "PublicNACL",
                "RuleNumber": "300",
                "Protocol": "6",
                "RuleAction": "allow",
                "Egress": "True",
                "CidrBlock": "OWNIP",
                "PortRange": {
                  "From": "22",
                  "To": "22"
                }
            }
        }
    }
       
}